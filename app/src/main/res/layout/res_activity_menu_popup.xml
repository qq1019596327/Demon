<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mRootLayout"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".menuPopup.MenuPopupActivity">

    <Button
            android:id="@+id/mShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="首都科技界"
    />

    <Button
            android:id="@+id/mCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="啊啊啊"
    />


    <com.gongziyi.demon.menuPopup.CalibrationAnimationView
            android:id="@+id/mId_gb"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/pot2"
            app:layout_constraintEnd_toEndOf="@+id/centerView"
            app:layout_constraintStart_toStartOf="@+id/centerView"
            app:layout_constraintBottom_toBottomOf="@+id/centerView"
            android:background="@color/res_colorPrimary"
    />
    <View
            android:id="@+id/centerView"
            android:layout_width="1px"
            android:layout_height="1px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
    />

    <View
            android:id="@+id/pot0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#E91E63"
            app:layout_constraintCircle="@id/centerView"
            app:layout_constraintCircleAngle="50"
            app:layout_constraintCircleRadius="0dp"
            tools:ignore="MissingConstraints"
    />
    <View
            android:id="@+id/pot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#4CAF50"
            app:layout_constraintCircle="@+id/centerView"
            app:layout_constraintCircleAngle="27"
            app:layout_constraintCircleRadius="0dp"
            tools:ignore="MissingConstraints"/>

    <View
            android:id="@+id/pot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#FFEB3B"
            app:layout_constraintCircle="@+id/centerView"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="0dp"
            tools:ignore="MissingConstraints"/>
    <View
            android:id="@+id/pot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#3F51B5"
            app:layout_constraintCircle="@+id/centerView"
            app:layout_constraintCircleAngle="333"
            app:layout_constraintCircleRadius="0dp"
            tools:ignore="MissingConstraints"/>
    <View
            android:id="@+id/pot4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#3F51B5"
            app:layout_constraintCircle="@+id/centerView"
            app:layout_constraintCircleAngle="310"
            app:layout_constraintCircleRadius="0dp"
            tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>
