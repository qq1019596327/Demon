<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="74dp">

    <View
            android:id="@+id/mItemBgLayout"
            android:layout_width="90dp"
            android:layout_height="74dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

    <com.gongziyi.demon.chart.ui.GPicLegendView
            android:id="@+id/mItemLegend"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_08f"
            app:layout_constraintStart_toStartOf="@id/mItemBgLayout"
            app:layout_constraintTop_toTopOf="@id/mItemBgLayout" />


    <TextView
            android:id="@+id/mItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="6dp"
            android:alpha=".7"
            android:text="高端设备"
            android:textColor="#8A8C99"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/mItemLegend"
            app:layout_constraintEnd_toEndOf="@id/mItemBgLayout"
            app:layout_constraintStart_toEndOf="@id/mItemLegend"
            app:layout_constraintTop_toTopOf="@id/mItemLegend" />

    <TextView
            android:id="@+id/mItemCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:alpha=".7"
            android:text="5000"
            android:textColor="#8A8C99"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/mItemBgLayout"
            app:layout_constraintStart_toStartOf="@id/mItemName"
            app:layout_constraintTop_toBottomOf="@id/mItemName" />

    <TextView
            android:id="@+id/mItemPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:alpha=".7"
            android:text="40%"
            android:textColor="#33394E"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/mItemBgLayout"
            app:layout_constraintStart_toStartOf="@id/mItemCount"
            app:layout_constraintTop_toBottomOf="@id/mItemCount" />

</androidx.constraintlayout.widget.ConstraintLayout>