<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/mStartPadding"
            android:layout_width="100px"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_3c8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <View
            android:id="@+id/mProgressRegion"
            android:layout_width="200px"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_08f"
            app:layout_constraintTop_toBottomOf="@id/mStartPadding"
            app:layout_constraintStart_toEndOf="@id/mStartPadding"
            app:layout_constraintEnd_toEndOf="@id/mStartPadding"
            />
        <View
            android:id="@+id/mSmoothRegion"
            android:layout_width="100px"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f78"
            app:layout_constraintTop_toBottomOf="@id/mProgressRegion"
            app:layout_constraintStart_toEndOf="@id/mStartPadding"
            app:layout_constraintEnd_toEndOf="@id/mStartPadding"
            />
        <View
            android:id="@+id/mPaddingOffset"
            android:layout_width="100px"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_fe2"
            app:layout_constraintTop_toBottomOf="@id/mSmoothRegion"
            app:layout_constraintStart_toEndOf="@id/mProgressRegion"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.gongziyi.demon.gallery.view.ResourceGalleryView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <Button
        android:onClick="setNewDataArray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>